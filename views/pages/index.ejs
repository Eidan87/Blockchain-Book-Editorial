<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head'); %>


</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<main>

  <div class="album py-5 bg-light">
    <div class="container">
        <div class=" ">
        <h1>Lista de libros</h1>
        <p>Bienvenido a la Bookchain</p>
      </div>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        
        <% for(var i=0; i < cutreCoin.chain.length; i++) { %>  
        <div class="col">
          <div class="card shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Titulo del Libro</title><rect width="100%" height="100%" fill="#55595c"/><text x="20%" y="50%" fill="#eceeef" dy=".3em"><%= JSON.stringify(cutreCoin.chain[i].tituloLibro) %></text></svg>
            <div class="card-body">
              <p>Autor: <%= JSON.stringify(cutreCoin.chain[i].autorLibro) %></p>
<!--               <p class="card-text" style="
                overflow: hidden;
                display: -webkit-box;
                -webkit-line-clamp: 5;
                -webkit-box-orient: vertical;">
              <%= JSON.stringify(cutreCoin.chain[i].contenidoLibro)%>
              </p> -->
        
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/reader/<%= [i] %>"> <button type="button" class="btn btn-sm btn-outline-secondary">Leer</button></a>
                  <a href="#"><button type="button" class="btn btn-sm btn-outline-secondary">Comprar</button></a>
                </div>
                <small class="text-muted">Ejemplares: <%= JSON.stringify(cutreCoin.chain[i].cantidad) %></small>
              </div>
            </div>
          </div>
        </div>

        <% } %>

    </div>
</div>
</div>

</main>

<footer>
    <%- include('../partials/footer'); %>
</footer>

</body>
</html>